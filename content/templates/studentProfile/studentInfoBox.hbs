<div class="student-info-box">
	<div class="student-info-toolbar">
		<button id="btn-edit" data-edit="true">
			Edit
		</button>
		<button id="btn-done" class="js-edit-controls hidden">
			Done
		</button>
		<button id="btn-add-chart" class="js-edit-controls hidden>
			Add Chart
		</button>
	</div>
	<div class="student-icon-container">
		<img src="{{studentIconSource}}" class="student-icon"/>
	</div>
	<div class="student-info-container">
		<ul class="student-info-list">
			{{#each fields}}
				<li class="student-data-field clickable" data-field-name="{{studentDataLabel}}">
					<span class="remove-btn">x</span>
					<div class="student-data-label">
						{{studentDataLabel}}:
					</div>
					<div class="student-data-value">
						{{studentDataValue}}
					</div>
				</li>
			{{/each}}
		</ul>
	</div>
</div>